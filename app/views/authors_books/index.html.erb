<header>
<p><%= link_to "Authors Index", "/authors"%></p>
<p><%= link_to "Books Index", "/books"%></p>
<p><%= link_to "Authors Books Index", "/authors/#{@author.id}/books"%></p>
</header>

<h1><%=@author.name%>'s Books Index</h1>
<%= link_to 'Sort Alphabetically', "/authors/#{@author.id}/books?sort=alphabetical" %>

<% @author_books.each do |book| %>
  <p><%= book.title %></p>
  <li>Year Published:<%= book.published %></li>
  <li>In print:<%= book.in_print %></li>
  <li>Tranlated in English:<%= book.translated_english %></li>
<% end %>

<%= link_to 'Add Book', "/authors/#{@author.id}/books/new"%>