<h1>Update Author Form</h1>

<%= form_with url: "/authors/#{@author.id}", method: :patch, data: { turbo: false } do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :born %>
  <%= form.text_field :born %>
  <%= form.label :alive %>
  <%= form.text_field :alive %>
  <%= form.submit 'Update Author' %>
<% end %>